<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
		<format>tar.bz2</format>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>../ansible</directory>
			<outputDirectory>/ansible/big-data-platform</outputDirectory>
			<includes>
				<include>*.yml</include>
				<include>*.cfg</include>
				<include>*.sh</include>
				<include>.env</include>
				<include>Vagrantfile</include>
			</includes>
			<excludes>
				<exclude>.vagrant</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>../ansible/roles</directory>
			<outputDirectory>/ansible/big-data-platform/roles</outputDirectory>
			<excludes>
				<exclude>.vagrant</exclude>
			</excludes>
		</fileSet>

		<fileSet>
			<directory>../</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>README*</include>
				<include>license*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../elkstack</directory>
			<outputDirectory>/elkstack</outputDirectory>
			<includes>
				<include>Procfile</include>
				<include>elk-downloader.sh</include>
				<include>log4j-kakfa-processor.conf</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../bin</directory>
			<outputDirectory>/bin</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../kubemanifest</directory>
			<outputDirectory>/kubemanifest</outputDirectory>
			<includes>
				<include>*.json</include>
				<include>*.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>../microservices/core-api/target</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>


		<fileSet>
			<directory>../microservices/core-api/src/docs/markdown/generated</directory>
			<outputDirectory>docs/core-api</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../microservices/core-api/</directory>
			<outputDirectory>docker/core-api/</outputDirectory>
			<includes>
				<include>Dockerfile</include>
			</includes>
		</fileSet>

	</fileSets>
</assembly>