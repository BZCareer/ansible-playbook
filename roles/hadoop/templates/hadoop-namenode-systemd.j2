[Unit]
Description=Hadoop NameNode And DataNode Service
After=network.target

[Service]
Type=forking
User=centos
Environment=HADOOP_PREFIX={{ hadoop_install_dir }}  JAVA_HOME=/usr/lib/jvm/java-1.7.0
ExecStart={{ hadoop_install_dir }}/sbin/start-dfs.sh
ExecStop={{ hadoop_install_dir }}/sbin/stop-dfs.sh
Restart=on-abort

[Install]
WantedBy=multi-user.target
